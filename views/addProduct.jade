extends layout

block content
  .page-header
    h3 Add New Product
  form.form-horizontal(id='addProduct-form', method='POST')
     input(type='hidden', name='_csrf', value=_csrf)
     .form-group
      label.col-sm-3.control-label(for='username') User Name
      .col-sm-7
        input.form-control(type='text', name='username', id='username', value='#{user.profile.name}')
     
     .form-group
      label.col-sm-3.control-label(for='name') Product Name
      .col-sm-7
        input.form-control(type='text', name='name', id='name')

      .form-group
      label.col-sm-3.control-label(for='description') Description
      .col-sm-7
        input.form-control(type='text', name='description', id='description')
  
        button.btn.btn-success(type='submit')
          i.fa.fa-user-plus
          | AddProduct
