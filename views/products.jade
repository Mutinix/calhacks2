extends layout

block content
	h1 Products
	hr 
	.row 
		h2= title

		a(href='/addproduct')
			button.btn.btn.btn-primary(type='submit')
				i.fa.fa-plus
				| Add Product
		
		ul.list-unstyled
			each product, index in products
				li 
					.col-sm-3
						a(href="/products/" + index)
							h4= product.name 
						p= product.price
