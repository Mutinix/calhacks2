extends ../layout

block content
  .page-header
    h3 User Profile

  h3 #{user.profile.name}

  .row
    .col-sm-3
      img(class="img-circle" src="#{user.gravatar()}", class='profile', width='100', height='100')
      br
      br
      .panel.panel-default
        .panel-heading Details
        .panel-body
          .ul
            .li Location: #{user.profile.location}
            .li Seller Rating: 5 stars
            .li Buyer Rating: 5 stars

    .col-sm-9
      h4 Products
      .row.placeholders
        each product, index in products
          .col-sm-3
          - var i = product.productid_id
            a(href="/products/" + i)
              h4= product.name
              a(href="/products/" + i).thumbnail
                img(src=product.imgUrl)